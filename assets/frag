
uniform float blue;
uniform float rad;
uniform vec2 pos1, pos2;
 
void main()
{
    float d1 = distance(pos1, gl_FragCoord.xy);
    float d2 = distance(pos2, gl_FragCoord.xy);

    vec4 pixel;
    if(blue == 1.0){
	pixel = vec4(0.0, 0.0, 1.0, clamp((d2/rad)/3.0, 0.0, 0.25));
    } else {
	pixel = vec4(1.0, 0.0, 0.0, clamp((d1/rad)/3.0, 0.0, 0.25));
    }

    gl_FragColor = pixel;
}

